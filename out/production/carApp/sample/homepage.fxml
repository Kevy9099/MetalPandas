<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="homePageBack" xmlns="http://javafx.com/javafx/11.0.1"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
  </rowConstraints>
  <stylesheets>
    <URL value="@homepagestyles.css"/>
  </stylesheets>
  <BorderPane fx:id="homePageBorderPane" prefHeight="400.0" prefWidth="600.0">
    <left>
      <TabPane fx:id="homeTab" prefHeight="400.0" prefWidth="93.0" tabClosingPolicy="UNAVAILABLE"
        BorderPane.alignment="CENTER">
        <Tab fx:id="MenuTab" text="Menu">
          <VBox fx:id="homeVbox" prefHeight="275.0" prefWidth="93.0" spacing="5">
            <Button fx:id="profileButton" onAction="#handleShowView1" text="Profile"/>
            <Button fx:id="favouritesButton" onAction="#handleShowView2" text="Favourites"/>
            <Button fx:id="logoutButton" onAction="#handleShowView3" text="Logout"/>
          </VBox>
        </Tab>
      </TabPane>
    </left>
  </BorderPane>
</GridPane>
